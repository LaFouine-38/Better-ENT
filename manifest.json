{
  "manifest_version": 3,
  "name": "Better ENT",
  "description": "Cette extension permet de moderniser l'apparence de l'ENT",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "assets/16x.png",
    "32": "assets/32x.png",
    "64": "assets/64x.png",
    "128": "assets/128x.png"
  },
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "scripts/handlers/backgroundScriptInit.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://fleming-isere.ent.auvergnerhonealpes.fr/*"
      ],
      "css": [
        "css/styles.css"
      ],
      "js": ["scripts/emploiDuTemps.js", "scripts/handlers/requestHandler.js"
      ]
    },
    {
      "matches": [
        "https://fleming-isere.ent.auvergnerhonealpes.fr/sg.do?PROC=TRAVAIL_A_FAIRE&ACTION=AFFICHER_ELEVES_TAF&filtreAVenir=true"
      ],
      "css": [
        "css/travailAFaire.css"
      ]
    },
    {
      "matches": [
        "https://fleming-isere.ent.auvergnerhonealpes.fr/"
      ],
      "js": [
        "scripts/connection/connexion1.js"
      ]
    },
    {
      "matches": [
        "https://cas.ent.auvergnerhonealpes.fr/login?service=https%3A%2F%2Ffleming-isere.ent.auvergnerhonealpes.fr%2Fsg.do%3FPROC%3DIDENTIFICATION_FRONT"
      ],
      "js": [
        "scripts/connection/connexion2.js"
      ]
    },
    {
      "matches": [
        "https://cas.ent.auvergnerhonealpes.fr/saml/SAMLAssertionConsumer"
      ],
      "js": [
        "scripts/connection/connexion4.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/legrandz.png"],
      "matches": ["https://fleming-isere.ent.auvergnerhonealpes.fr/*"]
    },
    {
      "resources": ["assets/legrandz.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
